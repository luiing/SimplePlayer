<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@+id/player_id_frame"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <FrameLayout android:id="@+id/player_id_player"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/player_id_thumb"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_gravity="center"
        app:actualImageScaleType="focusCrop"
        app:placeholderImageScaleType="fitCenter"
        />
    <ImageView android:id="@+id/player_id_iv_back"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:padding="10dp"
        android:src="@drawable/btn_video_back"
        android:visibility="gone"
        />
    <ImageView android:id="@+id/player_id_iv_close"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:padding="5dp"
        android:src="@drawable/btn_video_close"
        android:visibility="gone"
        />
    <ProgressBar
        android:id="@+id/player_id_pbar_loading"
        style="?android:attr/progressBarStyle"
        android:indeterminateDrawable="@drawable/pb_video_gray"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_gravity="center"
        android:visibility="gone"
        />
    <LinearLayout android:id="@+id/player_id_ll_play"
        android:layout_width="190dp"
        android:layout_height="56dp"
        android:background="@drawable/bg_black_trans"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:visibility="gone"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:layout_gravity="center_vertical"
            android:text="您在使用非WIFI网络\n请注意流量哦～～～"
            android:paddingLeft="20dp"
            />
        <ImageView android:id="@+id/player_id_iv_play_s"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_gravity="center"
            android:clickable="true"
            android:src="@mipmap/video_play_s"
            android:layout_marginLeft="15dp"
            />
    </LinearLayout>
    <ImageView android:id="@+id/player_id_iv_play"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:src="@mipmap/video_play"
        android:clickable="true"
        android:visibility="gone"
        />
    <ImageView android:id="@+id/player_id_iv_pause"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:clickable="true"
        android:src="@mipmap/video_pause"
        android:visibility="gone"
        />
    <ProgressBar
        android:id="@+id/player_id_pbar_rate"
        style="?android:attr/progressBarStyleHorizontal"
        android:progressDrawable="@drawable/pb_video_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:maxHeight="2dp"
        android:minHeight="2dp"
        android:visibility="gone"
        />
    <LinearLayout android:id="@+id/player_id_ll_rate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:visibility="gone"
        >
        <TextView android:id="@+id/player_id_tv_play_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="12sp"
            android:textColor="#efefef"
            />
        <SeekBar
            android:id="@+id/player_id_seekBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:progressDrawable="@drawable/pb_video_progress"
            android:thumb="@drawable/sbar_video_thumb"
            android:layout_weight="1"
            android:maxHeight="1.5dp"
            android:minHeight="1.5dp"
            />
        <TextView android:id="@+id/player_id_tv_total_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:padding="5dp"
            android:textColor="#efefef"
            />
        <ImageView android:id="@+id/player_id_iv_fullscreen"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="14dp"
            android:src="@mipmap/fullscreen_start"
            android:scaleType="fitCenter"
            android:clickable="true"
            />
    </LinearLayout>
</FrameLayout>